<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_base"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/abs_layout_iv_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher_alreves" />

    <TextView
        android:id="@+id/abs_layout_tv_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".8"
        android:gravity="center"
        android:text="@string/abs_layout_tv_titulo"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/abs_layout_iv_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher_menu" />

</LinearLayout>