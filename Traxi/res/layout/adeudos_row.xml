<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/adeudos_row_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adeudos_row_titulo"
        android:textColor="@color/color_base" />

    <View
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gris_obscuro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/adeudos_row_descripcion"
            android:layout_width="0dp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:padding="3dp"
            android:lines="2"
            android:text="@string/adeudos_row_no_hay_datos"
            android:textColor="@color/color_vivos" />

        <ImageView
            android:id="@+id/adeudos_row_iv"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".2"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_tache" />
    </LinearLayout>

</LinearLayout>