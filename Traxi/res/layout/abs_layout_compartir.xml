<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/color_base" >

    <ImageView
        android:id="@+id/abs_layout_iv_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:src="@drawable/ic_launcher_compartir" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/abs_layout_tv_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/abs_layout_tv_titulo"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/abs_layout_iv_compratir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:src="@drawable/ic_launcher_compartir" />
    
    <ImageView
        android:id="@+id/abs_layout_iv_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".2"
        android:src="@drawable/ic_launcher_menu" 
         android:contentDescription="@string/app_name"
/>

</LinearLayout>