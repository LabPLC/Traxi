<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_group"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_obscuro_trans"
    android:fillViewport="true"
    android:overScrollMode="never" >

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/marco" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                      <TextView
                          android:id="@+id/califica_taxi_tv_titulo"
                          android:layout_width="0dp"
                          android:layout_weight=".9"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:paddingLeft="3dp"
                          android:text="@string/califica_taxi_tv_titulo_calif"
                          android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/califica_taxi_iv_no_calif"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_launcher_tache" />

                  
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <RatingBar
                        android:id="@+id/dialogo_califica_servicio_ratingBarServicio"
                        style="@style/StarRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/califica_taxi_tv_titulo_calif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gris_obscuro" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="2dp" />

                    <EditText
                        android:id="@+id/dialogo_califica_servicio_et_comentario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:hint="@string/dialogo_califica_servicio_et_comentario"
                        android:lines="5"
                        android:maxLength="50"
                        android:padding="2dp"
                        android:textCursorDrawable="@drawable/color_cursor" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dialogo_califica_tv_caracteres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    android:gravity="center|right"
                    android:layout_margin="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <Button
                        android:id="@+id/dialogo_califica_servicio_btnAceptar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/selector_btn_generic"
                        android:text="@string/dialogo_califica_servicio_btnAceptar"
                        android:textColor="@drawable/selector_txt_boton_redondo" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ViewFlipper>

</ScrollView>