<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".InicioDeTrabajo" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.27"
        android:padding="3dp" >

        <Button
            android:id="@+id/activity_buscar_placa_btn_emergencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight=".33"
            android:background="@color/gris_claro"
            android:drawableTop="@drawable/ic_launcher_alerta"
            android:text="Emergencia"
            android:textColor="@color/rojo_logo"
            android:textSize="12sp" />

        <Button
            android:id="@+id/activity_buscar_placa_btn_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight=".33"
            android:background="@color/gris_claro"
            android:drawableTop="@drawable/ic_launcher_tips"
            android:text="Tips"
            android:textColor="@color/gris_obscuro"
            android:textSize="12sp" />
         <Button
            android:id="@+id/activity_buscar_placa_btn_foto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
        android:layout_weight=".33"
            android:background="@color/gris_claro"
            android:drawableTop="@drawable/ic_launcher_foto"
            android:text="Tomar foto"
            android:textColor="@color/gris_obscuro"
            android:textSize="12sp" />

       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/marco"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/inicio_de_trabajo_tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/inicio_de_trabajo_tv_nombre"
                android:textColor="@color/gris_obscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inicio_de_trabajo_et_placa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_blanco"
                android:ems="10"
                android:hint="@string/inicio_de_trabajo_et_placa"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xK1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical" >

        <include
            android:id="@+id/xKeyBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/keyboard" />
    </LinearLayout>

</LinearLayout>